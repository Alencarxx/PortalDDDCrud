@model PS.PostalBeneficiario.Aplicacao.ViewModels.BeneficiarioViewModel

@{
    ViewBag.Title = "Detalhes do Cliente";
}

<h2>@ViewBag.Title </h2>

<div class="container">
    <div class="row">
        <div class="">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h4 class="panel-title">@Model.Nome</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3 col-lg-3 " align="center"> <img src="@Url.Action("ObterImagemBeneficiario", "Beneficiarios", new { id = Model.BeneficiarioId })" alt="@Model.Nome" class="img-circle img-responsive"> </div>

                        <div class=" col-md-9 col-lg-9 ">
                            <table class="table table-user-information">
                                <tbody>
                                    <tr>
                                        <td>E-mail:</td>
                                        <td><a href="mailto:@Model.Email">@Model.Email</a></td>
                                    </tr>
                                    <tr>
                                        <td>Data de Nascimento:</td>
                                        <td>@Model.DataNascimento.ToString("d")</td>
                                    </tr>
                                    <tr>
                                        <td>Data de Cadastro</td>
                                        <td>@Model.DataCadastro.ToString("d")</td>
                                    </tr>
                                    <tr>
                                    <tr>
                                        <td>CPF</td>
                                        <td>@Model.CPF</td>
                                    </tr>
                                    <tr>
                                        <td>Ativo</td>
                                        <td>@Html.CheckBoxFor(model => model.Ativo)</td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <a href="@Url.Action("Edit", "Beneficiarios", new {id = Model.BeneficiarioId})" data-modal="" class="btn btn-primary">
                        <span title="Editar" class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <a href="@Url.Action("Delete", "Beneficiarios", new { id = Model.BeneficiarioId })" data-modal="" class="btn btn-danger">
                        <span title="Excluir" class="glyphicon glyphicon-trash"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>